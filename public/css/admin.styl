@font-face
    font-family: CenturyGothic
    src: local("CenturyGothic-Regular"),
         url('fonts/GOTHIC.TTF')
@font-face
    font-family: CenturyGothic-Bold
    src: local("CenturyGothic-Bold"),
         url('fonts/946379.ttf')

body
  font-family: CenturyGothic

.hide
  display:none


#navbar-admin
  position: relative
  ul.navigation
    li
      margin-left: 19px
      a
        color: #333
        font-size: 19px


.border-b
    border-bottom:1px solid

.podtip
  display:none

#admin-cont
  #admin-hello
    text-align:center
  .form-admin
    margin-top:10px
    display:none
    #add-dish-table
      display: inline-block;
      vertical-align: top;
      tr
        height:39px
    #im-cont-step
      display: inline-block;
      vertical-align: top;
      width: 423px;
      padding-left: 10px;
.small-cont:hover
    img
      opacity:0.7
    .del
      opacity:1
    .del-e
      cursor:pointer
      opacity:1

  .small-cont
    position:relative
    width:160px
    height:160px
    display:inline-block
    margin-right:10px
    input
      position:absolute
      z-index: 1;
      width: 165px;
      height: 165px;
      opacity: 0;
    img
      position:absolute
      width:160px
      height:160px
    .del
      display:none
      opacity:0
      z-index:2
    .del-e
      opacity:0
      z-index:2
      
#small-cont-tone
  width:70px
  height:70px
