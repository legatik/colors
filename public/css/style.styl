.bestsellers-title
.novelty-title
.brands-title
.reviews-title
  margin-top: 70px
  text-align: center
  width: 100%
  font-size: 42px
  text-transform: uppercase
  color: #333333
  background: url('../img/line.png') -65px 27px no-repeat


.go-catalog
  width: 980px
  height: 37px
  background: url('../img/go-catalog.png')  no-repeat
  margin-top: 30px
  text-align: end
  line-height: 37px
  a
    font-size: 21.91px
    text-transform: uppercase
    text-decoration: none
    color: #fff
    margin-right: 43px
