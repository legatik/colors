    .title Returning Starfish Eye Cream от MIZON
    .descr интенсивный восстанавливающий крем для контура глаз с экстрактом морской звезды
    .price 779р
    .detail Подробнее
    .buy Купить
  .brands-title Бренды
  #myCarousel3.carousel.slide(data-ride="carousel")
    .carousel-inner
      - each itemArr in brend
        .item.item-brend
          - each item in itemArr
            a(href="/nav/brend?key="+item['_id'])
              img.brand(src !="../img/brends/#{item['_id']}/img.#{item.img}")
    a.left.carousel-control(data-slide="prev",href="#myCarousel3")
    a.right.carousel-control(data-slide="next",href="#myCarousel3")



  .reviews-title Отзывы
