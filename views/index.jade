extends layout


block content
  include navigation
  != js('home')
  #myCarousel.carousel.slide(data-ride="carousel")
    ol.carousel-indicators
      - each item, index in action
        li.click-action(data-target="#myCarousel",data-slide-to!=index)
    .carousel-inner
      - each item in action
        .item.item-action
          a(href!="/nav/promotions?key=#{item['_id']}")
            img(src!="../img/actions/#{item['_id']}/logo.#{item.logo}")
    a.left.carousel-control(data-slide="prev",href="#myCarousel")
    a.right.carousel-control(data-slide="next",href="#myCarousel")
  #advantage-cont
    .advantage.quality
      .pict
      .text Гарантия качества
    .advantage.safety
      .pict
      .text Безопасность
    .advantage.delivery
      .pict
      .text Быстрая доставка
    .advantage.gifts
      .pict
      .text Подарки
    .advantage.easy-payment
      .pict
      .text Удобные способы оплаты
    .advantage.back-guarantee
      .pict
      .text Гарантия возврата
  .bestsellers-title Бестселлеры
  #myCarousel2.carousel.slide(data-ride="carousel")
    .carousel-inner
      - each itemArr in vetrina
        .item.item-vetrina
          - each item in itemArr
            .prod
              img(src !="../img/products/#{item['_id']}/0.#{item.picture[0]}", width="124px", height="144px")
              .title #{item.title}
              .descr #{item.minOpisanie}
              .old-price #{item.oldCost}
              .new-price #{item.cost} р
              a(href != "/product/#{item['_id']}")
                .in-basket В КОРЗИНУ
        //.item
          .prod
            img(src="../img/prod.jpg", width="124px", height="144px")
            .title TONYMOLY Peach Anti-Aging Hand Cream
            .descr Утрапитательный крем для рук против старения кожи
            .old-price 417
            .new-price 339 р
            .in-basket В КОРЗИНУ
       
    a.left.carousel-control(data-slide="prev",href="#myCarousel2")
    a.right.carousel-control(data-slide="next",href="#myCarousel2")

  .go-catalog
    a(href="#") Перейти к каталогу  >
  .free-delivery Бесплатная доставка по всей россии от 3000 рублей!
  .discount-cont
    input.name(placeholder="Ваше имя")
    input.email(placeholder="Ваш email")
    a.discount(href="#") Получить скидку!
  .novelty-title Новинки
  
  #myCarousel4.carousel.slide(data-ride="carousel")
    ol.carousel-indicators
      - each item, index in news
        li.click-new(data-target="#myCarousel",data-slide-to!=index)
    .carousel-inner
      - each item in news
        .item.item-new
          a(href="#")
            img(src!="../img/news/#{item['_id']}/logo.#{item.logo}")
    a.left.carousel-control(data-slide="prev",href="#myCarousel4")
    a.right.carousel-control(data-slide="next",href="#myCarousel4")
  
  
  
  //.novelty-left
    img(width="372", height="302")
