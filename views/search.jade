extends layout


block content
  include navigation
  != js('search')
  input#firstData(type="hidden", search=search)
  .for-afisha АФИИИИШШШШШШШШШШШШАААА!!!
  .left-side

  .right-side
    .filter-block
        .select-price-cont
            .title Цена
            #slider-price
            #slider-price-fake
            label.min-price-label От
            input.min-price(value="49")
            label.max-price-label До
            input.max-price(value="2599")
        input.search-product
        .sort-cont
            .title Сортировать
            select.sort-product
                option По популярности

    .res-search
      .prod
        img(src="../img/prod.jpg", width="124px", height="144px")
        .title TONYMOLY Peach Anti-Aging Hand Cream
        .descr Утрапитательный крем для рук против старения кожи
        .old-price 417
        .new-price 339 р
        .in-basket В КОРЗИНУ




  script#filerTemplate(type="text/template")
    .switch
      .catalog.active Каталог
      .brands Бренды
    select#nav-type.nav
      <% _.each(gdata, function(data, key) { %>  <option value=<%=key%>><%= data.title %></option> <% }); %>
    div.types
      <% _.each(data.tip, function(data, key) { %>  
      ul.type-product 
        span.filter-type(value !="<%=data.key%>") <%=data.title%>
        <% _.each(data.podtip, function(data, key) { %>  
        li.filter-pod-type <%=data.title%>
        <% }); %>
      <% }); %>
    <% _.each(data.dop, function(data, key) { %>
    ul.select-params <%=data.title%>
      <% _.each(data.list, function(data, key) { %>
      li(ischecked="true", value!="<%=data.key%>") <%=data.title%>
      <% }); %>
    <% }); %>  
    ul.select-params.brands Бренды
      <% _.each(bdata, function(data, key) { %>
      li(ischecked="true", value!="<%=data['_id']%>") <%=data.title%>
      <% }); %>  


  include footer





