extends layout


block content
  include navigation
  != js('admin')
  != css('admin')
  #admin-cont
    h3#admin-hello Привет админ
    button#brend-show Добавить бренд
    button#product-show Добавить продукт

    #brend-form.form-admin
      span Ведите название бренда
      br
      input#brend-name
      button#add-brend Добавить
      span#success-brend.hide &nbsp Бренд успешно добавлен
    br
    #product-form.form-admin
      table#add-dish-table(style="display:inline-block")
        tr
          td Выберите название&nbsp
          td
            input#brend-title
        tr
          td Выберите бренд&nbsp
          td
            select#brend-select
        tr
          td Ведите краткое описание&nbsp
          td
            input#brend-min-disc
        tr
          td Объем&nbsp
          td
            input(type="number")#brend-obem
        tr
          td Вес&nbsp
          td
            input(type="number")#brend-ves
        tr
          td ID&nbsp
          td
            input(type="number")#brend-id
        tr
          td Старая цена&nbsp
          td
            input(type="number")#brend-old-cost
        tr
          td Цена&nbsp
          td
            input(type="number")#brend-cost
        tr
          td Описание&nbsp
          td
            input#brend-desc
        tr
          td Применение&nbsp
          td
            input#brend-prim
        tr
          td Выберите тип&nbsp
          td
            select#brend-tip
              option(value="face") Для лица
        tr
          td На ветрину&nbsp
          td
            input#vetrina(type="checkbox")

      #im-cont-step(style="display:inline-block")
        div(style="text-align:center")
          b Выберите картинки товара
        div.small-cont
          input.step-inp#step-inp-0(type="file")
          img.step-img#step-img-0(src="/img/add-bg.png")
          img#del-step-0.del.del-step(src="/img/close.png")
      div
        button#add-brend-btn Добавить продукт
  script#faceTemplate(type="text/template")
      tr.add-param
        td Оттенок&nbsp
        td
          input#brend-tone
      tr.add-param
        td Тип товара&nbsp
        td
          input#tip-tip
      tr.add-param
        td Кожа&nbsp
        td
          input#brend-koza
      tr.add-param
        td Несовершенства&nbsp
        td
          input#brend-nesovershenstva

  script#stepTemplate(type="text/template")
    div.small-cont
      input.step-inp(type="file",id!="step-inp-<%=number%>")
      img.step-img(id!="step-img-<%=number%>",src="/img/add-bg.png")
      img.del.del-step(src="/img/close.png", id !="del-step-<%=number%>")


