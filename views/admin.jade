extends layout


block content
  include navigation
  != js('admin')
  != css('admin')
  #admin-cont
    h3#admin-hello Привет админ
    button#brend-show Добавить бренд
    button#product-show Добавить продукт

    #brend-form.form-admin
      span Ведите название бренда
      br
      input#brend-name
      button#add-brend Добавить
      span#success-brend.hide &nbsp Бренд успешно добавлен
    br
    #product-form.form-admin
      table#add-dish-table(style="display:inline-block")
        tr
          td Выберите название&nbsp
          td
            input#brend-title
        tr
          td Выберите бренд&nbsp
          td
            select#brend-select
        tr
          td Ведите краткое описание&nbsp
          td
            input#brend-min-disc
        tr
          td Объем&nbsp
          td
            input(type="number")#brend-obem
        tr
          td Вес&nbsp
          td
            input(type="number")#brend-ves
        tr
          td ID&nbsp
          td
            input(type="number")#brend-id
        tr
          td Старая цена&nbsp
          td
            input(type="number")#brend-old-cost
        tr
          td Цена&nbsp
          td
            input(type="number")#brend-cost
        tr
          td Описание&nbsp
          td
            input#brend-desc
        tr
          td Применение&nbsp
          td
            input#brend-prim
        tr
          td На ветрину&nbsp
          td
            input#vetrina(type="checkbox")
        tr
          td Оттенок/вид&nbsp
          td
            textarea#brend-tone
          td &nbspчерез запятую без пробела
        tr
          td Выберите тип товара&nbsp
          td
            select#brend-tip
              option(value="face") Для лица
      #im-cont-step(style="display:inline-block")
        div(style="text-align:center")
          b Выберите картинки товара
        div.small-cont
          input.step-inp#step-inp-0(type="file")
          img.step-img#step-img-0(src="/img/add-bg.png")
          img#del-step-0.del.del-step(src="/img/close.png")
      div
        button#add-brend-btn Добавить продукт
  script#faceTemplate(type="text/template")
      tr.add-param
        td Тип товара&nbsp
        td
          select#product-tip
            option(value="ochishenie") Очищение
            option(value="tonizir") Тонизирование
            option(value="osnov-uhod") Основной уход
            option(value="spec-uhod") Специальный уход
            option(value="sonlce-zach") Солнцезащитные средства
            option(value="otchelush") Отшелушивание
            option(value="face-mask") Маски
      tr#ochishenie.add-param.podtip
        td Подтип
        td
          select
            option(value="ochishenie1") Для снятия макияжа
            option(value="ochishenie2") Гидрофильные масла
            option(value="ochishenie3") Гели для умывания
            option(value="ochishenie4") Пенки для умывания
            option(value="ochishenie5") Кремы, пудры для умывания
      
      tr#tonizir.add-param.podtip
        td Подтип
        td
          select
            option(value="tonizir1") Бустеры
            option(value="tonizir2") Тонерыб стартеры
            option(value="tonizir3") Мисты (спрей)
            option(value="tonizir4") Тампоны-патчи
      
      tr#osnov-uhod.add-param.podtip
        td Подтип
        td
          select
            option(value="osnov-uhod1") Ампулы
            option(value="osnov-uhod2") Сыворотки и эссенции
            option(value="osnov-uhod3") Лосьоны, эмульсии
            option(value="osnov-uhod4") Гели
            option(value="osnov-uhod5") Кремы
      
      
      tr#spec-uhod.add-param.podtip
        td Подтип
        td
          select
            option(value="spec-uhod1") Бальзымы и конуентраты
            option(value="spec-uhod2") Точечные средства
            option(value="spec-uhod3") Масла 
            option(value="spec-uhod4") Массажные средства
      
      tr#sonlce-zach.add-param.podtip
        td Подтип
        td
          select
            option(value="")
      
      tr#otchelush.add-param.podtip
        td Подтип
        td
          select
            option(value="otchelush1") Скрабы и гаммажи
            option(value="otchelush2") Пилинги
      
      tr#face-mask.add-param.podtip
        td Подтип
        td
          select
            option(value="face-mask1") Ночные масски
            option(value="face-mask2") Маски, пасты, кремы, пенки
            option(value="face-mask3") Тканевые, листовые маски
            option(value="face-mask3") Точечные маски-патчи
      
      
      tr.add-param
        td Кожа&nbsp
        td
          input#brend-koza
      tr.add-param
        td Несовершенства&nbsp
        td
          input#brend-nesovershenstva

  script#stepTemplate(type="text/template")
    div.small-cont
      input.step-inp(type="file",id!="step-inp-<%=number%>")
      img.step-img(id!="step-img-<%=number%>",src="/img/add-bg.png")
      img.del.del-step(src="/img/close.png", id !="del-step-<%=number%>")


