extends ../../layout


block content
  include ../../navigation
  != js('admin/new')
  != css('admin')
  #admin-cont
    include admin-nav
    
    
    button#new-show Добавить новинку

    #new-form.form-admin
      table#new-table(style="display:inline-block")
        tr
          td Ведите название бренда&nbsp
          td
            input#new-name
            
        tr
          td Описание бренда&nbsp
          td
            textarea.textarea-add-m#new-desc
            
        tr
          td На ветину&nbsp
          td
            input#vetrina(type="checkbox")
            
        tr
          td Изображение на главной&nbsp
          td
            div.small-cont-ck
              input#img-new.small-inp-ck(type="file")
              img#prev-new.small-prev-ck(src="/img/add-bg.png")
              img#img-prev-close.small-del-ck(src="/img/close.png")
        tr
          td Изображение на стринице&nbsp
          td
            div.small-cont-ck
              input#logo-new.small.small-inp-ck(type="file")
              img#logo-img-new.small-prev-ck(src="/img/add-bg.png")
              img#logo-prev-close.small-del-ck(src="/img/close.png")
            
            
        tr
          td
            button#add-new Добавить&nbsp
          td#success-new.hide
            span &nbsp Бренд успешно добавлен


  script#stepTemplate(type="text/template")
    div.small-cont
      input.step-inp(type="file",id!="step-inp-<%=number%>")
      img.step-img(id!="step-img-<%=number%>",src="/img/add-bg.png")
      img.del.del-step(src="/img/close.png", id !="del-step-<%=number%>")

