doctype 5
html
  head
    title= title
    != css('style-layout')
    != css('style')
    != css('lib/carousel')
    != css('lib/jquery-ui')
    != js('libs/jquery-2.0.3.min')
    != js('libs/carousel')
    != js('libs/parsley')
    != js('libs/underscore-min')
    != js("libs/backbone-min")
    != js("libs/jquery-ui")
    != js("libs/moment")
    != js('libs/jquery.cookie.js')
    != js("global")
  body
    .header-fake
    .container
      block content
    .gradient
    .footer-fake
    #footer-bg
        include footer


    #header-top-fixed
      div#vn-cont
        ul.navigation
          li.about-us
            a(href='/header/about') О нас
          li.catalog
            a(href='/nav/face')  Каталог
          li.payment
            a(href='/header/pay')  Доставка и оплата
          li.promotions
            a(href='/nav/promotions')  Акции
          li.rewiews
            a(href='/header/reviews')  Отзывы
          li.opt
            a(href='/header/opt')  Опт
          li.contacts
            a(href='/header/contact')  Контакты
        #call-order-cont
          #call-order Заказать звонок
          #phone-number 8 928 604 78 71

    script#productTemplate(type="text/template")
      .prod
        img(src!="../img/products/<%=data['_id']%>/<%=data.picture[0]%>", width="124px", height="144px")
        .title <%=data.title%>
        .descr <%=data.minOpisanie%>
        .old-price <%=data.oldCost%>
          <%if (data.oldCost) {%>
          span &nbsp;р
          <%}%>
        .new-price <%=data.cost%>
          span &nbsp;р
        a(href != "/product/<%=data['_id']%>")
          .in-basket В КОРЗИНУ

