doctype 5
html
  head
    title= title
    != css('style-layout')
    != css('style')
    != css('lib/carousel')
    != css('lib/jquery-ui')
    != js('libs/jquery-2.0.3.min')
    != js('libs/carousel')
    != js('libs/parsley')
    != js('libs/underscore-min')
    != js("libs/backbone-min")
    != js("libs/jquery-ui")
    != js("libs/moment")
    != js("global")
  body
    .header-fake
    .container
      block content
    .gradient
    .footer-fake
    #footer-bg
        include footer



    script#productTemplate(type="text/template")
      .prod
        img(src!="../img/products/<%=data['_id']%>/<%=data.picture[0]%>", width="124px", height="144px")
        .title <%=data.title%>
        .descr <%=data.minOpisanie%>
        .old-price <%=data.oldCost%>
          <%if (data.oldCost) {%>
          span &nbsp;р
          <%}%>
        .new-price <%=data.cost%>
          span &nbsp;р
        a(href != "/product/<%=data['_id']%>")
          .in-basket В КОРЗИНУ

